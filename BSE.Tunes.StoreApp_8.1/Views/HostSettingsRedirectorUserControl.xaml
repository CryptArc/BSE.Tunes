<UserControl
    x:Class="BSE.Tunes.StoreApp.Views.HostSettingsRedirectorUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding HostSettingsRedirectorViewModel, Source={StaticResource Locator}}"
    xmlns:local="using:BSE.Tunes.StoreApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid RequestedTheme="Light">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <HyperlinkButton x:Uid="HostSettingsRedirector_RedirectorButtonText" Grid.Column="0" Command="{Binding RedirectCommand}"/>
        <Button Style="{StaticResource LightRefreshAppBarButtonStyle}" Grid.Column="1" Command="{Binding RedirectCommand}" VerticalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
