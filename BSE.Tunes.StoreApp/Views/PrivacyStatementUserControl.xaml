<UserControl
    x:Class="BSE.Tunes.StoreApp.Views.PrivacyStatementUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BSE.Tunes.StoreApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Common/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TextBlock x:Uid="PrivacyStatement_TxtDescription" Text="Diese Applikation spielt die Audiodateien eines, in den Einstellungen eingetragenen, entfernten Computers ab. 
Die Applikation benötigt die eingetragene, nicht überprüfte EMail- Adresse nur für personenbezogene Wiedergabelisten. Es werden sonst keine personenbezogenen Informationen gespeichert."/>
    </Grid>
</UserControl>
